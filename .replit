modules = ["nodejs-20", "python-3.11"]

# Command that runs when you click the Run button.
# Uses the $PORT environment variable that Replit provides and binds to all interfaces.
run = "npm run dev -- --port $PORT --host"

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-lc", "python3 -m venv venv && ./venv/bin/pip install --upgrade pip && ./venv/bin/pip install -r requirements.txt"]

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[nix]
packages = ["gh", "run"]
