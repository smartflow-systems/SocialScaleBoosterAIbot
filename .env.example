# SmartFlow AI - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/smartflow_ai

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# ============================================
# Stripe Payment Integration
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs
STRIPE_PRO_PLAN_PRICE_ID=price_xxxxx
STRIPE_PREMIUM_TEMPLATE_PRICE_ID=price_xxxxx

# ============================================
# AI Integration
# ============================================
# Google Gemini AI (Primary)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# OpenAI (Optional - for advanced features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION=org-xxxxx

# ============================================
# Session Management
# ============================================
SESSION_SECRET=your_very_secure_random_session_secret_here_change_this
SESSION_NAME=smartflow_ai_session
SESSION_MAX_AGE=86400000
SESSION_SECURE=false

# ============================================
# Server Configuration
# ============================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# HTTPS Configuration (production)
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================
# Social Media Platform API Keys
# ============================================
# TikTok Business API
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram Graph API
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Twitter API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ============================================
# Analytics and Monitoring
# ============================================
# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your_ga_api_secret

# Sentry Error Tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0

# LogRocket Session Replay
LOGROCKET_APP_ID=your_logrocket_app_id

# ============================================
# Email Configuration
# ============================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Email Settings
EMAIL_FROM=noreply@smartflowsystems.com
EMAIL_FROM_NAME=SmartFlow AI
SUPPORT_EMAIL=support@smartflowsystems.com

# SendGrid (Alternative)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Rate Limits
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# ============================================
# File Upload and Storage
# ============================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartflow-ai-uploads

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=*

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/smartflow-ai/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30

# Development Logging
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ============================================
# Security Settings
# ============================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# ============================================
# Feature Flags
# ============================================
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_MARKETPLACE=true
FEATURE_PREMIUM_TEMPLATES=true
FEATURE_STRIPE_PAYMENTS=true
FEATURE_MULTI_PLATFORM_BOTS=true
FEATURE_SCHEDULING_SYSTEM=true
FEATURE_PERSONALITY_DESIGNER=true
FEATURE_EXPORT_DATA=true
FEATURE_WEBHOOKS=true

# ============================================
# Business Configuration
# ============================================
# Freemium Limits
FREE_TIER_BOT_LIMIT=3
PRO_TIER_BOT_LIMIT=999999

# Pricing
PRO_PLAN_MONTHLY_PRICE=49.00
PRO_PLAN_CURRENCY=USD

# ============================================
# Webhooks
# ============================================
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=5000

# External Webhooks
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# ============================================
# Content Moderation
# ============================================
CONTENT_MODERATION_ENABLED=true
CONTENT_MODERATION_STRICT_MODE=false

# Perspective API (Google)
PERSPECTIVE_API_KEY=your_perspective_api_key

# ============================================
# Scheduled Jobs
# ============================================
CRON_ENABLED=true
CRON_TIMEZONE=America/New_York

# Job Schedules
JOB_ANALYTICS_UPDATE=0 */5 * * * *
JOB_BOT_HEALTH_CHECK=0 */15 * * * *
JOB_CLEANUP_OLD_DATA=0 0 2 * * *

# ============================================
# Development Settings
# ============================================
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_EXTERNAL_APIS=false

# Dual Mode Configuration
APP_MODE=node
PYTHON_PORT=5000

# ============================================
# CDN Configuration
# ============================================
CDN_ENABLED=false
CDN_URL=https://cdn.smartflowsystems.com
CDN_ASSETS_PATH=/assets

# ============================================
# SEO Configuration
# ============================================
SITE_URL=https://smartflow.ai
SITE_NAME=SmartFlow AI
SITE_DESCRIPTION=Premium AI automation for e-commerce social media
SITE_KEYWORDS=ai,automation,social media,e-commerce,bots

# ============================================
# Legal and Compliance
# ============================================
TERMS_URL=https://smartflowsystems.com/terms
PRIVACY_URL=https://smartflowsystems.com/privacy
GDPR_ENABLED=true
COOKIE_CONSENT_REQUIRED=true

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/smartflow_ai_test
TEST_STRIPE_KEY=sk_test_xxxxx
TEST_MODE=false
